{% extends "base.twig" %}
{% block head %}
{% if post.meta('no_post_page')%}

<!-- Here is a the meta controlled by the custom field  -->
 <META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">

{% endif %}
{% endblock %}
{% block content %}
<main class="content with-hero">
    <article class="case-study">
  {% include 'partial/hero.twig' %}


    <div class="wrap container-fluid">

   

        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-5 ">
                <h1>{{ post.title }}</h1>
                <p>{{ post.portfolio_intro }}</p>
                {% if post.site_link|length  %}
                    <a href="{{post.site_link}}" class="button sml-arrow">View Site</a>
                {% endif %}
            </div>
            <!-- /.col-sm-6 -->
            <div class="col-xs-12 col-sm-6 col-md-5 col-md-offset-1">
                <img src="{{ Image(post.meta('portfolio_intro_image')).src }}">
            </div>
            <!-- /.col-sm-6 -->
        </div>
        <!-- /.row -->
        {% for item in post.meta('portfolio_layout') %}
        {% if loop.index0 % 2 == 0 %}
              <div class="row">
              
        {% endif %}
        {% set offset = ' col-md-offset-1'%}
         <div class="col-xs-12 col-sm-6 col-md-5  {% if loop.index0 % 2 == 1 %}{{offset}}{% endif %} ">
            {{item.portfolio_content_block}}

         </div>
            <!-- /.col-sm-6 -->      
        
         {% if loop.index0 % 2 == 1 or loop.last %}

      </div>
        <!-- /.row -->
  {% endif %}
    {% endfor %}
    
        </div> <!-- /wrap container-fluid -->
        </article>
    </main>
{% endblock %}
